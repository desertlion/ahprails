<% if notice %>
<p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>

<h1>Listing Plants</h1>

<table class="table table-bordered table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.profile %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', plant, class: 'btn btn-mini btn-default' %>
            <%= link_to 'Edit', edit_plant_path(plant), class: 'btn btn-mini btn-default' %>
            <%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_plant_path, class: 'btn btn-mini btn-primary btn-block btn-raised' %>
